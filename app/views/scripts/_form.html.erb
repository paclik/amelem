<% form_for(@script) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message ,"cols" =>100, "rows" => 15%>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

