  		<li>	
				<%= f.radio_button :state, 'Nemá zájem'%>Nemá zájem  
			</li>
  </ul>			
  <p>
     <%= f.label :body_type_id %><br />
    <%=  collection_select(:contact, :body_type_id, BodyType.all, :id, :type_cz, {:prompt => true})%>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
