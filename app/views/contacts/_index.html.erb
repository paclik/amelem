<% ####   vypis jednotlivzch radku scripts  %>   
<% ####   i = row counter %> 
<%i=0%>
<% @contacts.each do |contact| %>
  <% if  @highlight =~ /\Aodd/ then @highlight = 'even' else  @highlight = 'odd' end  %>
  
  <tr id='<%= @highlight%>'>
    <td nowrap> <%= if defined?(@contacts.current_page) then
  							(i+1).to_i + (@contacts.current_page.to_i - 1).to_i * 30 if defined?(@contacts.current_page)
  						else
  							(i+1).to_i
  						end	
  	%>
  	 <%i=i+1%>
  	<td><%=h contact.first_name %></td>
    <td><%= link_to contact.last_name, contact  %>
    <td><%=h contact.mob_phone %>
    <td><%=h contact.land_line %></td>
    <td><%=h contact.email %></td>
     <td nowrap><%=h contact.state %></td>
    <td><%=h contact.height %></td>
    <td><%=h contact.weight %></td>
    <td><%=h contact.age %></td>
    <td><%=h contact.body_type.type_cz if contact.body_type %></td>
    
  </tr>
<% end %>


